@{
    Layout = null;
}


@model Admin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/datatables.css" >
    <link rel="stylesheet" href="~/css/datatables.min.css" >
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <style>
         .orange_color{
          border: 2px solid #F88634;
          color:#F88634;
          }
        </style>
</head>

<body class="d-flex align-items-center justify-content-center">



        
<div class="d-flex flex-column  flex-sm-row justify-content-center align-items-center">
        <form class="form mt-3" method="post" asp-action="AdminLoginPage" asp-controller="Admin" >
          <div class="mb-1 mb-sm-3">
            <h6><label  class="form-label">Email address</label></h6>
            <input type="email" asp-for="@Model.Email" class="form-control w-100" id="Email" aria-describedby="emailHelp"
              placeholder="evan.donohue@gmail.com">
               <span  class="text-danger"></span>

          </div>
          <div class="mb-1 mb-sm-3">
            <h6><label  class="form-label" >Password</label></h6>
            <input type="password" asp-for="@Model.Password" class="form-control" id="password" placeholder="**********">
             <span  class="text-danger"></span>
          </div>

          <div class="mb-1 mb-sm-3">
            <input type="submit"  class="btn rounded-pill w-100 h-auto p-2 mt-2 orange_color"
              value="Login">
          </div>

          <div class="mb-1 mb-sm-3 text-center">
            <span class=" lostpassword__text fst-NotoSans-Light  "><a 
                class="text-decoration-none">Lost your password?</a></span>
          </div>

         
          @*<div class="col text-center mt-5 mt-sm-0 mt-xl-5 pt-xl-5  ">Privacy Policy</div>*@
        </form>


    </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>