@using CI_Platfrom.Entities.Models.ViewModel

@model ConfirmPasswordVM

@{
ViewData["Title"] = "Registration";
}

  <div class="container-fluid">
    <div class="row d-flex align-items-center">
      <div class="col-12 col-xl-8">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="d-block w-100"
                alt="..." />
              <div class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
                <p>
                  Some representative placeholder content for the first slide.
                </p>
              </div>
            </div>
            <div class="carousel-item">
              <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="d-block w-100"
                alt="..." />
              <div class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
                <p>
                  Some representative placeholder content for the first slide.
                </p>
              </div>
            </div>
            <div class="carousel-item">
              <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="d-block w-100"
                alt="..." />
              <div class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
                <p>
                  Some representative placeholder content for the first slide.
                </p>
              </div>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <!-- <img src="./images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="img-fluid" alt="Grow-Trees-On-the-path-to-environment-sustainability-login" /> -->
      </div>
      <div class="col-12 col-xl-4 d-flex flex-column mt-2 flex-sm-row justify-content-center align-items-center">

        <form class="form mt-3 w-75" method="post" asp-controller="Registration" asp-action="Register" >

          <div class="mb-1 mb-sm-3">
            <h6><label asp-for="User.FirstName" class="form-label">First Name</label></h6>
            <input type="text"  asp-for="User.FirstName" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="evan" />
             <span asp-validation-for="User.FirstName" class="text-danger"></span>
          </div>

          <div class="mb-1 mb-sm-3">
            <h6><label asp-for="User.LastName" class="form-label">Last Name</label></h6>
            <input type="text" asp-for="User.LastName" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="donohue" />
            <span asp-validation-for="User.LastName" class="text-danger"></span>
          </div>

          <div class="mb-1 mb-sm-3">
            <h6>
              <label asp-for="User.PhoneNumber" class="form-label">Phone Number</label>
            </h6>
            <input type="tel" pattern="[0-9]{10}"  asp-for="User.PhoneNumber" class="form-control"  aria-describedby="emailHelp" placeholder="8923454615" />
            <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
          </div>

          <div class="mb-1 mb-sm-3">
            <h6>
              <label asp-for="User.Email" class="form-label">Email address</label>
            </h6>
            <input asp-for="User.Email" class="form-control" id="Email" aria-describedby="emailHelp"
              placeholder="evan.donohue@gmail.com" />
              <span asp-validation-for="User.Email" class="text-danger"></span>
          </div>

          <div class="mb-1 mb-sm-3">
            <h6><label asp-for="User.Password" class="form-label">Password</label></h6>
            <input type="password" asp-for="User.Password" class="form-control"  placeholder="**********" />
            <span asp-validation-for="User.Password" class="text-danger"></span>
          </div>

         <div class="mb-1 mb-sm-3">
            <h6>
              <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            </h6>
            <input type="password" asp-for="ConfirmPassword" class="form-control"   placeholder="**********" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
          </div>

          <div class="mb-1 mb-sm-3">
            <input type="submit" class="btn btn-primary rounded-end-circle w-100 h-auto p-2 mt-2 login__button"
              value="Register" />
          </div>

          <div class="mb-1 mb-sm-3 text-center">
            <span class="lostpassword__text fst-NotoSans-Light"><a asp-controller="Authentication" asp-action="forgotPassword"
                class="text-decoration-none">Lost your password?</a></span>
          </div>

          <div class="mb-1 mb-sm-3 text-center">
            <span class="noaccout__text ">Already register?<a asp-controller="Authentication" asp-action="login"
                class="text-decoration-none">Login now</a></span>
          </div>

          <div class="col text-center mt-5 mt-sm-0 mt-xl-5 pt-xl-5">
            Privacy Policy
          </div>

        </form>
      </div>
    </div>
  </div>

