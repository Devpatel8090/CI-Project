@{
ViewData["Title"] = "Reset Password";
}
@model CI_Platfrom.Entities.Models.ViewModel.resetPassword


  <div class="container-fluid  ">
    <div class="row">
      <div class="col-md-8 col-12">
        <partial name="_Banner" />
        <!-- <img src="./images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="img-fluid" alt="Grow-Trees-On-the-path-to-environment-sustainability-login" /> -->
      </div>
      <div class="col-md-4 col-12  justify-content-center align-items-center">
        <div class="row flex-column h-100">
          <div class="col">
            <div class="d-flex justify-content-center align-items-center h-100">

              <form  method="post"  class="form mt-3">

                  <input asp-for="token" value="@ViewBag.Email.token"  hidden  >

                  <input  asp-for ="email" value="@ViewBag.Email.email" hidden   >

                <div class="mb-sm-3 mb-3 text-center">
                  <h4 class="" >New Password</h4>
                </div>

                <div class="mb-sm-3 mb-4 text-center">
                  <span>Please enter a new password in the fields below.</span>
                </div>
                <div class="mb-1 mb-sm-3">
                  <h6><label  asp-for="password" class="form-label">New Password</label></h6>
                  <input type="password" asp-for="password" class="form-control" id="password" placeholder="**********">
                  <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="mb-1 mb-sm-3">
                  <h6><label asp-for="confirmpassword" class="form-label">Confirm New Password</label></h6>
                  <input type="password" asp-for="confirmpassword" class="form-control" id="password" placeholder="**********">
                  <span asp-validation-for="confirmpassword" class="text-danger"></span>
                </div>
                <div class="mb-sm-3 mb-2 mt-4">
                  <input type="submit" class="btn btn-primary  rounded-end-circle w-100 h-auto p-2 mt-2 login__button"
                    value="Change Password">
                </div>
                <div class="mb-1 mb-sm-3 text-center">
                  <span class="fst-NotoSans-Light"><a  asp-controller="Authentication" asp-action="login" class="text-decoration-none">Login</a></span>
                </div>
              </form>
            </div>
          </div>

          <div class="col-auto text-center mb-0 mb-md-3"><a href="#" class="text-decoration-none">Privacy policy</a>
          </div>
        </div>
      </div>
    </div>
    @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
    </div>

