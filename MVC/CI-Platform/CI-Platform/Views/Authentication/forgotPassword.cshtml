@{
ViewData["Title"] = "ForgotPassword";
}

@model CI_Platfrom.Entities.Models.User


  <div class="container-fluid  ">
    <div class="row">
      <div class="col-md-8 col-12">
        <partial name="_Banner" />
        <!-- <img src="./images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="img-fluid" alt="Grow-Trees-On-the-path-to-environment-sustainability-login" /> -->
      </div>
      <div class="col-md-4 col-12  d-flex flex-column mt-2 flex-sm-row justify-content-center align-items-center">

        <form class="form mt-3" method="post" asp-controller="Authentication" asp-action="ForgotPassword">
          <div class="mb-2 mb-sm-3 text-center">
            <span class="noaccout__text offset-md-1  offset-lg-3 offset-xl-0 display-6  ">Forgot Password</span>
          </div>
          <div class="mb-2 mb-sm-3 text-center">
            <span class="noaccout__text offset-md-1  offset-lg-3 offset-xl-0  ">Enter your email address you've using
              for your account <br>below and we will send you a password reset link</span>
          </div>
          <div class="mb-2 mb-sm-3">
            <h6><label asp-for="Email" class="form-label ">Email address</label></h6>
            <input type="email" asp-for="Email" class="form-control" id="Email" aria-describedby="emailHelp"
              placeholder="Enter your email address...">
              <span asp-validation-for="Email" class="text-danger"></span>

          </div>
          <div class="mb-2 mb-sm-3">
            <input type="submit" class="btn btn-primary  rounded-end-circle w-100 h-auto p-2 mt-2 login__button"
              value="Reset my Password">
              
          </div>
          <div class="mb-2 mb-sm-3 text-center">
            <span class=" lostpassword__text fst-NotoSans-Light  "><a  asp-controller="Authentication" asp-action="login"
                class="text-decoration-none color-black">Login</a></span>
          </div>

          <div class="col text-center mt-5 mt-sm-0 mt-xl-5 pt-xl-5  align-items-end ">Privacy Policy</div>
        </form>


      </div>
    </div>
    </div>
  
