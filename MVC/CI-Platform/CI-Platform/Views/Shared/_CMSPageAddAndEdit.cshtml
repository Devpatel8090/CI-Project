@model AdminVM

<div class="AddCMSPagebody">

        <div>
        <h3 class="AddCMSPageheader">CMSPage</h3>
        </div>
        <div class="AddCMSPagedata">
            <form method="post" onsubmit="return isValidCMSPageAdmin()" asp-action="EditCMSPage" asp-controller="Admin">
                @*<input asp-for="@Model.loggeduser.Email" id="adminEmail" hidden>*@
                <input asp-for="@Model.ParticularCMSPage.CmsPageId" id="cmsid" hidden>
                <div class="mb-3">
                    <label  class="form-label">Title :</label>
                    <input asp-for="@Model.ParticularCMSPage.Title"  class="form-control" id="cmsTitle">
                    <span class="text-danger" id="cmstitlespan"></span>
                </div>
                <div class="mb-3">
                    <label  class="form-label">Description :</label>
                    <textarea id="CMSText"  asp-for="@Model.ParticularCMSPage.Description"></textarea>
                    <span class="text-danger" id="summernotespan"></span>
                </div>
                <div class="mb-3">
                    <label  class="form-label">Slug :</label>
                    <input asp-for="@Model.ParticularCMSPage.Slug"  class="form-control" id="cmsSlug">
                    <span class="text-danger" id="cmsslugspan"></span>
                </div>
                
                <div class="mb-3">
                    <label  class="form-label">Status :</label>
                    <select asp-for="@Model.ParticularCMSPage.Status" id="CMSPageStatus" class="form-select" aria-label="Default select example">
                          <option value="1" selected>Active</option>
                          <option value="0">InActive</option>
                    </select>
                </div>
                <div class="text-end">
                    <button type="button" class="btn border-secondary px-3 py-1 text-secondary  text-center rounded-pill bg-white">Cancel</button>
                    <button type="submit"  class="btn px-3 text-success py-1 border-success text-center rounded-pill bg-white">Save</button>
                    
                </div>
            </form>
        </div>
    
</div>
    <script>
          $(document).ready(function() {
          $('#CMSText').summernote({
              height: 200,
          });
          
        });


        </script>

   
    
