@{
}

@model TimesheetVM


        <div class="modal-content">
            <form method="post" asp-action="AddTimeSheet" asp-controller="VolunteeringTimeSheet">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Please input below Volunteering Goal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col">
                    <input asp-for="@Model.particularTimesheet.TimesheetId"  hidden/>
                    <input asp-for="@Model.particularTimesheet.MissionId"  hidden/>
                    <label class="">Mission</label>
                    <select class="form-select mt-2" disabled readonly asp-for="@Model.particularTimesheet.MissionId" aria-label="Default select example">
                        <option  selected >@Model.particularTimesheet.Mission.Title</option>
                          
                      </select>
                </div>
                <div class="col">
                    <label class="mt-2">Please input below Volunteering Goal</label>
                    <input type="text" asp-for="@Model.particularTimesheet.Action" placeholder="Enter Actions" class="form-control mt-2" >
                   
                    
                </div>
                <div class="col">
                    <label class="mt-2">Date Volunteered</label>
                    <input type="text" asp-for="@Model.particularTimesheet.DateVolunteered" placeholder="04-11-2019" class="form-control mt-2" >
                </div> 

                <div class="col mt-2">
                    <label class="mt-2">Message</label>
                    <textarea class="form-control mt-2" asp-for="@Model.particularTimesheet.Notes" placeholder="Enter your message" id="floatingTextarea"></textarea>                    
                </div>               
            </div>
            <div class="modal-footer">
                <button type="button" class="px-3 py-1  text-center rounded-pill bg-white"  data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="px-3 py-1  orange_color rounded-pill bg-white border-2">Submit</button>
            </div>
            </form>
        </div>
    