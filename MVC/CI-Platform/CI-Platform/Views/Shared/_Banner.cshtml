@{

    IEnumerable<Banner>? banners = Enumerable.Empty<Banner>();
    if(ViewData["Banners"] != null)
    {
         banners = ViewBag.Banners;
    }
   
}

<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
        @{
            
            foreach(var item in banners.OrderBy(ban => ban.SortOrder))
            {
                @if(item.Equals(banners.ElementAt(0)))
                {
                     <div class="carousel-item active">
                         <img src="@item.Image" class="d-block  w-100"
                        alt="...">
                      <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Text</h5>
                        <p>Some representative placeholder content for the first slide.</p>
                      </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item ">
                         <img src="@item.Image" class="d-block  w-100"
                        alt="...">
                      <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Text</h5>
                        <p>Some representative placeholder content for the first slide.</p>
                      </div>
                    </div>
                }
           
              
            }

          
        }

